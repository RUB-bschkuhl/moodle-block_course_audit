<div class="block-course-audit-documentation card">
    <div class="card-header bg-primary text-white">
        <h2 class="h4 mb-0">{{#str}} documentation_heading, block_course_audit {{/str}}</h2>
    </div>
    
    <div class="card-body">
        <div class="documentation-content">
            {{{svgcontent}}} <!-- SVG als Card-Body-Inhalt -->
            {{> block_course_audit/documentation/documentation_content}}
        </div>
    </div>
{{#courseid}}
    <div class="card-footer bg-light">
        <a href="{{config.wwwroot}}/course/view.php?id={{courseid}}" class="btn btn-secondary">
            {{#str}} backtocourse, block_course_audit {{/str}}
        </a>
    </div>
    {{/courseid}}
</div>