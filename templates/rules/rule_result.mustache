{{!
    @template block_course_audit/rules/rule_result

    Template for displaying rule check results.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * section_id - ID of the section being checked
    * section_name - Name of the section being checked
    * section_number - Number of the section being checked
    * course_id - ID of the course
    * course_shortname - Short name of the course
    * rules - Rule results and stats
}}

<div class="block_course_audit_rule_result">
    <div class="messages">
        {{#rule_result.messages}}
            <p class="mb-1">{{{.}}}</p>
        {{/rule_result.messages}}
        {{#rule_result.action_button_details}} 
            <a class="btn btn-primary course-audit-action-button audit-action-{{mapkey}}" role="button">{{label}}</a>
        {{/rule_result.action_button_details}}
    </div>
</div> 